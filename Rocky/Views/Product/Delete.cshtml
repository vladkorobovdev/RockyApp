@model Rocky_Models.Product
@using Rocky_Utility

@{
    ViewData["Title"] = "Delete Product";
}


<form method="post"> 
    
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4 bg-white">
       
        <div class="form-group row pb-2">
            <h2 class="text-info ps-3">
                Delete Product
            </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name" class=""></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price" class=""></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description" class=""></label>
                    </div>
                    <div class="col-8 mb-3">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>

                </div>
                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId" class=""></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId" class=""></label>
                    </div>
                    <div class="col-8 mb-3">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100" >Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i>  Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0) {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb;" />
                }
            </div>
        </div>

    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
            });
        });

    </script>
}