@model Rocky_Models.OrderHeader

@{
    ViewData["Title"] = "InquiryConfirmation";
}

<div class="text-center">
    @if (Model != null)
    {
        <h1 class="text-info">
            Order Created
        </h1>

        <p>
            Order #@Model.Id has been created successfully!
        </p>
    }
    else
    {
        <h1 class="text-info">
            Inquiry Confirmation
        </h1>

        <p>
            We have received Your inquiry and someone from our team will contact you shortly!
        </p>
    }

    <img src="/img/patio.jpg" width="80%" />
</div>
